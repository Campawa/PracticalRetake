<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/mypadding"
    android:paddingLeft="@dimen/padding"
    android:background="#228B22">

    <TextView
        android:id="@+id/cardsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="@string/cards_remaining"
        android:textSize="20sp"
        android:layout_marginRight="50dp"/>

    <Button
        android:id="@+id/shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="190dp"
        android:text="@string/shuffle_new_deck"
        android:textSize="16sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewheight"
        android:layout_marginTop="80dp"
        android:background="@android:color/black"/>


    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:hint="@string/how_many_cards"
        android:textSize="15sp"
        android:inputType="number"/>

    <Button
        android:id="@+id/draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_alignTop="@+id/editText"
        android:text="@string/draw_cards"
        android:textSize="16sp" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        >

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
